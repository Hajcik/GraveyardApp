@model List<RegisterViewModel>

@{
    ViewData["Title"] = "Zablokuj pracownika";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{

}
@if (User.IsInRole("Administrator"))
{
    <a asp-action="Index" asp-controller="Admin"
       class="btn btn-primary mb-3" style="width:auto">
        Strona główna admina
    </a>
    <a asp-action="RegisterAdmin" asp-controller="Admin"
       class="btn btn-primary mb-3" style="width:auto">
        Nowy admin
    </a>
    <a asp-action="RegisterEmployee" asp-controller="Admin"
       class="btn btn-primary mb-3" style="width:auto">
        Nowy pracownik
    </a>
    <a asp-action="BlockEmployee" asp-controller="Admin"
       class="btn btn-primary mb-3" style="width:auto">
        Zablokuj pracownika
    </a>
    <a asp-action="UnblockEmployee" asp-controller="Admin"
       class="btn btn-primary mb-3" style="width:auto">
        Odblokuj pracownika
    </a>

    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
        <div class="card mb-3">
            <div class="card-header">
                <h2>Zablokuj pracownika</h2>
            </div>
            <div>
                <div class="card-body">
                    @for (int i = 0; i < Model.Count; i++)
                    {

                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model[i].UserId" />
                            <input type="hidden" asp-for="@Model[i].Email" />
                            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        </div>
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">
                            <h5 class="card-title">@Model[i].Email</h5>
                        </label>

                    }
                </div>
                <div class="card-footer">
                    <input type="submit" value="Zablokuj" class="btn btn-danger" style="width:auto" 
                           onclick="window.location.href=window.location.href"/>
                    <a asp-action="Index" class="btn btn-warning">Powrót</a>
                </div>
            </div>
        </div>
    </form>
      
}
