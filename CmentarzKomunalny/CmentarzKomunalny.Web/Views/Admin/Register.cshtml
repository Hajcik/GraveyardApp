@model CmentarzKomunalny.Web.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Stwórz nowego użytkownika w serwisie Cmentarza";
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if(User.Identity.IsAuthenticated && (User.IsInRole("Administrator"))) { 
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Stwórz nowego użytkownika.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DropDownList("Role", (SelectList)ViewBag.RoleUzytkownikow, "Wybierz role", new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-default">Stwórz użytkownika</button>
        </form>
    </div>
</div>
}

    